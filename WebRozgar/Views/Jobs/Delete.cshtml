@model WebRozgar.ViewModels.FloatJobViewModel

@{
    ViewBag.Title = "Delete";
}
<div class="row-fluid" style="margin-top: 10px;">
    <div class="span2">
        <img src="~/img/employer.jpg" style="height: 145px; width: 145px;" />
    </div>
    <div class="span9" style="margin-top: 20px; margin-left: -5px">
        <a style="text-decoration:none" href="@Url.Action("Profile", "My", new { Id = User.Identity.Name })">
            <p style="color: #36a0d6; font-size: 40px; font-family: 'Segoe UI';">@ViewBag.FirstName @ViewBag.LastName</p>
            <p>&#64 @User.Identity.Name</p>
        </a>
        <div class="row-fluid" style="margin-top: 38px;">
            <div class="tabbable">
                <ul class="nav nav-tabs">
                    <li>@Html.ActionLink("About Company", "Profile", "My")</li>
                    <li>@Html.ActionLink("Float Job", "FloatJob", "My")</li>
                    <li>@Html.ActionLink("Previous jobs", "FloatHistory", "My")</li>
                    <li class="active">@Html.ActionLink("Delete Job", "Delete", new { Id = Model.JobId })</li>
                    <li>@Html.ActionLink("Settings", "Manage", "Account")</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid" style="margin-top: 30px;">
    <div class="span11">
        <div class="tabbable">
            <div class="tab-content" style="min-height: 250px;">
                <div class="row-fluid">
                    <div class="span2">
                        <strong>Job Title: </strong>
                    </div>
                    <div class="span3">
                        @Model.JobTitle
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span2">
                        <strong>Location: </strong>
                    </div>
                    <div class="span3">
                        @Model.Location
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span2">
                        <strong>No of openings: </strong>
                    </div>
                    <div class="span3">
                        @Model.NoOfOpenings
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span2">
                        <strong>Experience Required</strong>
                    </div>
                    <div class="span3">
                        @Model.Experience
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span2">
                        <strong>Description</strong>
                    </div>
                    <div class="span3">
                        @Model.Description
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" class="btn btn-danger" value="Delete" />
                }
            </div>
        </div>
    </div>

</div>

