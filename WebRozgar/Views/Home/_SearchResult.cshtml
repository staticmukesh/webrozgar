@model List<WebRozgar.ViewModels.SearchResultViewModel>

<div id="result">
    @if (Model != null)
    {
        if (Model.Count() != 0)
        {
        <div class="tabbable">
            <legend>Search Results: </legend>
            @foreach (var item in Model)
            {
                <div class="row-fluid" style="margin-bottom: 20px">
                    <div class="row-fluid">
                        <div class="span4">
                            <a style="font-size:20px;" href="@Url.Action("Details", "Jobs", new { id = item.JobId })">@item.JobTitle</a>
                        </div>
                        <div class="span4">
                            @if (Request.IsAuthenticated)
                            {
                                if (User.IsInRole("seeker"))
                                {
                                <a href="@Url.Action("Details", "Jobs", new { id = item.JobId })" class="btn btn-primary">Apply</a>
                                }
                            }
                        </div>
                    </div>
                    <div class="row-fluid">
                        <p style="font-size: 15px; margin-bottom: 0px;">@item.JobDescription</p>
                        <p style="font-size: 13px; margin-bottom: 0px;">floated by <a href="@Url.Action("Profile", "Home", new { id = item.FloaterUsername })">@item.FloaterUsername</a> at @item.PostedDate</p>

                    </div>
                </div>
                <hr />
            }
        </div>
        }
        else
        {
        <strong style="font-size: 25px;">No Results :(</strong>
        }
    }
</div>
