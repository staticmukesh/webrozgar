@model IEnumerable<WebRozgar.ViewModels.FloatJobViewModel>

@{
    ViewBag.Title = "Float History";
}

<div class="row-fluid" style="margin-top: 10px;">
    <div class="span2">
        <img src="~/img/employer.jpg" style="height: 145px; width: 145px;" />
    </div>
    <div class="span9" style="margin-top: 20px; margin-left: -5px">
        <a style="text-decoration:none" href="@Url.Action("Profile", "My", new { Id = User.Identity.Name })">
            <p style="color: #36a0d6; font-size: 40px; font-family: 'Segoe UI';">@ViewBag.FirstName @ViewBag.LastName</p>
            <p>&#64 @User.Identity.Name</p>
        </a>
        <div class="row-fluid" style="margin-top: 38px;">
            <div class="tabbable">
                <ul class="nav nav-tabs">
                    <li>@Html.ActionLink("About Company", "Profile", "My")</li>
                    <li>@Html.ActionLink("Float Job", "FloatJob", "Jobs")</li>
                    <li class="active">@Html.ActionLink("Previous jobs", "FloatHistory", "My")</li>
                    <li>@Html.ActionLink("Settings", "Manage", "Account")</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid" style="margin-top: 30px;">
    <div class="span11">
        <div class="tabbable">
            @if (Model.Count() == 0)
            {
                <p style="font-size: 25px;">No jobs have been floated :(</p>
            }
            else
            {
                <table class="table table-hover">
                    <tr>
                        <th>Job Id
                        </th>
                        <th>Job Title
                        </th>
                        <th>Location
                        </th>
                        <th>No Of Openings
                        </th>
                        <th>Experience
                        </th>
                        <th>PostedDate
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoOfOpenings)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Experience)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PostedDate)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", "Jobs", new { id = item.JobId }, new { @class = "anchor" }) |
                            @Html.ActionLink("Details", "Details", "Jobs", new { id = item.JobId }, new { @class = "anchor" }) |
                            @Html.ActionLink("Delete", "Delete", "Jobs", new { id = item.JobId }, new { @class = "anchor" })
                            </td>
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>
