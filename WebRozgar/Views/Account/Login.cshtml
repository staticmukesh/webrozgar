@model WebRozgar.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <fieldset class="form-horizontal">
        <legend></legend>
        <div class="control-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-inline" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <div class="controls">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-inline" })
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox", @style="min-height:0px;" })
                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                </div>
            </div>
        </div>
        <div class="form-actions no-color" style="padding-top:0px;padding-bottom:0px;">
            <input type="submit" value="Log in" class="btn btn-success" />
        </div>
        <div class="control-group">
            <div class="controls">
                 <span class="field-validation-error">
                    @if (ViewData["Error"]!=null)
                     {
                        @ViewData["Error"].ToString();
                     }
                 </span>
            </div>
        </div>
        <div class="control-group" style="margin-top:0px;">
            <div class="controls">
                @Html.ActionLink("Forgot password/Username ?", "forgot", null,new {@style="text-decoration:none;" })
            </div>
        </div>
        
    </fieldset>
    <p class="well">
       <strong>@Html.ActionLink("Register", "Register", "Account", null,new {@style="text-decoration:none;" })</strong> now, if you don't have one!
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
